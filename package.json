{
	"name": "server-boilerplate",
	"productName": "server-boilerplate",
	"version": "1.0.0",
	"description": "Multiplayer Sketchbook",
	"main": ".webpack/main",
	"scripts": {
		"setup": "npm install && npm fund && npm run build",
		"build:client": "webpack --config ./src/webpack.prod.client.ts",
		"build:server": "webpack --config ./src/webpack.prod.server.ts",
		"build:turbo": "turbo run build_struct",
		"build": "npm run build:client && npm run build:server",
		"dev:client": "webpack serve --config ./src/webpack.dev.client.ts",
		"dev:server": "webpack serve --config ./src/webpack.dev.server.ts",
		"dev": "concurrently -k \"npm run dev:client\" \"npm run dev:server\"",
		"dev:server:start": "nodemon --watch dist ./dist/server/server.js",
		"start:server": "node ./dist/server/server.js",
		"start": "electron-forge start",
		"package": "electron-forge package",
		"make": "electron-forge make",
		"publish": "electron-forge publish",
		"lint": "eslint --ext .ts,.tsx .",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"keywords": [],
	"author": {
		"name": "tkkaushik369",
		"email": "krishnakaushiktiruveedula369@gmail.com"
	},
	"license": "MIT",
	"packageManager": "npm@8.5.0",
	"devDependencies": {
		"@electron-forge/cli": "^7.8.3",
		"@electron-forge/maker-deb": "^7.8.3",
		"@electron-forge/maker-rpm": "^7.8.3",
		"@electron-forge/maker-squirrel": "^7.8.3",
		"@electron-forge/maker-zip": "^7.8.3",
		"@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
		"@electron-forge/plugin-fuses": "^7.8.3",
		"@electron-forge/plugin-webpack": "^7.8.3",
		"@electron/fuses": "^1.8.0",
		"@types/debug": "^4.1.12",
		"@types/express": "^4.17.23",
		"@types/node": "^24.3.0",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"@vercel/webpack-asset-relocator-loader": "^1.7.3",
		"copy-webpack-plugin": "^13.0.1",
		"css-loader": "^6.11.0",
		"electron": "^37.3.1",
		"eslint": "^8.57.1",
		"eslint-plugin-import": "^2.32.0",
		"fork-ts-checker-webpack-plugin": "^7.3.0",
		"node-loader": "^2.1.0",
		"style-loader": "^3.3.4",
		"ts-loader": "^9.5.4",
		"ts-node": "^10.9.2",
		"turbo": "^2.5.6",
		"typescript": "^5.9.2",
		"webpack": "^5.101.3",
		"webpack-cli": "^6.0.1",
		"webpack-dev-server": "^5.2.2",
		"webpack-merge": "^6.0.1"
	},
	"dependencies": {
		"@types/express-ws": "^3.0.5",
		"electron-squirrel-startup": "^1.0.1",
		"express": "^5.1.0",
		"express-ws": "^5.0.2"
	},
	"optionalDependencies": {
		"bufferutil": "^4.0.9",
		"utf-8-validate": "^5.0.10"
	}
}
